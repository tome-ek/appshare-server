{
  "include": ["./index.ts", "src/**/*.ts"],
  "exclude": ["node_modules/"],
  "compilerOptions": {
    "allowJs": false,
    "target": "es5",
    "module": "commonjs",
    "rootDir": "./",
    "outDir": "./build",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node"],
    "strict": true,
    "lib": ["es2018"],
    "strictPropertyInitialization": false,
    "sourceMap": true
  },
  "ts-node": {
    "transpileOnly": true,
    "transpiler": "ts-node/transpilers/swc-experimental"
  }
}
